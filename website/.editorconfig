# EditorConfig configuration file
root = true

# Default settings for all files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# TypeScript files
[*.ts]
indent_style = space
indent_size = 2

# TypeScript React files (.tsx)
[*.tsx]
indent_style = space
indent_size = 2
